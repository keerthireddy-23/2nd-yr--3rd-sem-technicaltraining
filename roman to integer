#include <stdio.h>
#include <string.h>

int value(char roman) {
    switch (roman) {
        case 'I': return 1;
        case 'V': return 5;
        case 'X': return 10;
        case 'L': return 50;
        case 'C': return 100;
        case 'D': return 500;
        case 'M': return 1000;
        default: return 0;
    }
}

int romanToInt(char roman[]) {
    int total = 0;
    int len = strlen(roman);

    for (int i = 0; i < len; i++) {
        int s1 = value(roman[i]);
        int s2 = value(roman[i + 1]);

        if (s1 >= s2)
            total += s1;
        else
            total -= s1;
    }

    return total;
}

int main() {
    char roman[20];

    printf("Enter a Roman numeral (in uppercase): ");
    scanf("%s", roman);

    int result = romanToInt(roman);

    printf("Integer value: %d\n", result);

    return 0;
}
